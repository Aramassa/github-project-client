{
  "name": "github-project-client",
  "version": "1.0.0",
  "description": "github project client for nodejs",
  "main": "dist/index.js",
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "npm run clean && tsc",
    "prepublishOnly": "npm run build",
    "clean": "rm -rf dist",
    "test": "jest"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Aramassa/github-project-client.git"
  },
  "author": "Aramassa",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/Aramassa/github-project-client/issues"
  },
  "homepage": "https://github.com/Aramassa/github-project-client#readme",
  "devDependencies": {
    "@types/jest": "^26.0.7",
    "@types/node": "^14.0.26",
    "dotenv": "^8.2.0",
    "jest": "^26.1.0",
    "ts-jest": "^26.1.3",
    "ts-node": "^8.10.2",
    "typescript": "^3.9.7"
  },
  "dependencies": {
    "github-api": "^3.3.0"
  },
  "jest": {
    "setupFiles": [
      "dotenv/config"
    ],
    "moduleFileExtensions": [
      "ts",
      "js"
    ],
    "transform": {
      "^.+\\.ts$": "ts-jest"
    },
    "globals": {
      "ts-jest": {
        "tsConfig": "tsconfig.json"
      }
    },
    "testMatch": [
      "**/test/*_spec.ts"
    ],
    "testEnvironment": "node"
  }
}
