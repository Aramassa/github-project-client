{
  "compilerOptions": {
    "target": "esnext",
    "module": "commonjs",
    "declaration": true,
    "allowJs": true,
    "noImplicitAny": true,
    "newLine": "lf",
    "removeComments": true,
    "preserveConstEnums": true,
    "experimentalDecorators": true,
    "sourceMap": false,
    "outDir": "./dist/"
  },
  "include" : [
    "./**/*"
  ],
  "exclude" : [
    "node_modules",
    "spec"
  ]
}
