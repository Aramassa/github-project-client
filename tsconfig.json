{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es2015",
    "allowJs": true,
    "noImplicitAny": true,
    "removeComments": true,
    "preserveConstEnums": true,
    "experimentalDecorators": true,
    "sourceMap": false,
    "rootDir": "./src/",
    "outDir": "./dist"
  },
  "include" : [
    "./**/*"
  ],
  "exclude" : [
    "node_modules",
    "spec"
  ]
}
